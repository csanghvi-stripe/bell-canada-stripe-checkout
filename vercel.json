{
  "version": 2,
  "public": true,
  "builds": [
    { "src": "public/**/*", "use": "@vercel/static" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/", "destination": "/public/index.html" },
    { "source": "/cart", "destination": "/public/cart.html" },
    { "source": "/checkout", "destination": "/public/checkout.html" },
    { "source": "/success", "destination": "/public/success.html" },
    { "source": "/(.+\\.[a-zA-Z]+)$", "destination": "/public/$1" },
    { "source": "/(.*)", "destination": "/public/$1" }
  ]
}
